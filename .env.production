# NullAI Production Configuration (Demo Mode - No Inference)

# Application Mode
APP_ENV=production
DEMO_MODE=true
ENABLE_INFERENCE=false

# Database
DATABASE_URL=sqlite:///./sql_app.db
DB_ECHO=false

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2

# CORS
CORS_ORIGINS=*

# Model Settings (disabled in demo mode)
MODEL_PROVIDER=mock
DEFAULT_MODEL_ID=demo-model

# Security
SECRET_KEY=change-this-in-production-to-a-random-secure-key
ALLOWED_HOSTS=*

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Features
ENABLE_WEB_SEARCH=false
ENABLE_MEMORY_AUGMENTATION=true
ENABLE_JUDGE_SYSTEM=false
AUTO_SAVE_TO_MEMORY=false

# Demo Mode Messages
DEMO_NOTICE=このデモ版では推論機能は無効化されています。データベースとUI機能のみが動作します。
