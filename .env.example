# NullAI Environment Configuration

# ===================
# アプリケーション設定
# ===================
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-here-change-this-in-production

# ===================
# データベース設定
# ===================
DATABASE_URL=sqlite:///./sql_app.db
# PostgreSQL使用時: postgresql://user:password@localhost/nullai

# ===================
# Google OAuth2認証
# ===================
# Google Cloud Consoleで取得: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/oauth/google/callback

# ===================
# ORCID認証（専門家認証）
# ===================
# ORCID Developer Toolsで取得: https://orcid.org/developer-tools
ORCID_CLIENT_ID=APP-XXXXXXXXXXXX
ORCID_CLIENT_SECRET=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
ORCID_REDIRECT_URI=http://localhost:8000/api/oauth/orcid/callback
ORCID_SANDBOX=false  # 開発環境ではtrue、本番環境ではfalse

# ===================
# CORS設定
# ===================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ===================
# セキュリティ設定
# ===================
ALLOWED_HOSTS=*
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ===================
# 機能フラグ
# ===================
ENABLE_INFERENCE=true
ENABLE_WEB_SEARCH=false
ENABLE_MEMORY_AUGMENTATION=true
ENABLE_JUDGE_SYSTEM=true
AUTO_SAVE_TO_MEMORY=false

# ===================
# ゲストアクセス
# ===================
ALLOW_GUEST_ACCESS=true
GUEST_CAN_CREATE_WORKSPACES=true

# ===================
# ワークスペース設定
# ===================
DEFAULT_WORKSPACE_DB_TYPE=sqlite
WORKSPACES_DIR=./workspaces
MAX_WORKSPACES_PER_USER=10

# ===================
# ロギング
# ===================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
